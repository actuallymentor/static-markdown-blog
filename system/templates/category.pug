doctype html
html
	include _header.pug
	body
		include _menu.pug
		main
			div#header
				h1 Category: #{category}
			section#categories.container
				each post in posts
					- if ( post.meta.categories.indexOf( category ) != -1 )
						a.postlist( href=site.system.url + category + "/" + post.slug )
							article
								img.circle.thumb( src=site.system.url + post.meta.featuredimg )
								h3 #{post.meta.title}
								span #{post.meta.desc}

		include _footer.pug