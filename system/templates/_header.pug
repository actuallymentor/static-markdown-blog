head
	meta( charset='utf8' )
	meta( name="viewport" content="width=device-width, initial-scale=1" )

	if meta.title
		title !{site.identity.title} - !{meta.title}
		meta( name="twitter:title" content=site.identity.title + ' - ' + meta.title )
		meta( property="og:title" content=site.identity.title + ' - ' + meta.title )
	else
		title !{site.identity.title}
		meta( name="twitter:title" content=site.identity.title )
		meta( property="og:title" content=site.identity.title )

	meta( property="og:site_name" content=site.identity.title )

	meta( name="description" content=site.identity.desc )
	meta( name="description" content=site.identity.desc )

	meta( name="twitter:card" content=meta.desc )
	meta( property="og:description" content=meta.desc )

	meta( name="twitter:site" content=site.author.twitter )
	meta( property="og:type" content="article" )

	meta( property="article:published_time" content=meta.published)

	meta( property="og:url" content=currentURL )
	meta( property="fb:admins" content="1299359953416544" )
	meta( property="profile:first_name" content=site.author.firstname)
	meta( property="profile:last_name" content=site.author.lastname)

	link( rel="dns-prefetch" href="//www.google-analytics.com" )
	link( rel="dns-prefetch" href="//fonts.googleapis.com.com" )

	if content
		link( rel="canonical" href=site.system.baseURL + site.system.blogslug + '/' + meta.slug )

body
	nav#navbar
		ul
			li Home
			li Contact
