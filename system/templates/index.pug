doctype html
html
	include _header.pug

	main
		div#header
			h1 #{meta.title}
		section#index.container
			h2 All posts
			each post in allPosts
				a.postlist( href=site.system.baseURL + site.system.blogslug + "/" + post.slug )
					article
						h3 #{post.title}
						span #{post.desc}

	include _footer.pug